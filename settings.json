{
    // VIM
    "vim.hlsearch": true,
    "vim.gdefault": true,
    "editor.renderIndentGuides": false,
    "vim.normalModeKeyBindings": [
        {
            "before": [
                "Y"
            ],
            "after": [
                "y",
                "$"
            ]
        }
    ],
    // https://github.com/VSCodeVim/Vim/issues/2007
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "u"
            ],
            "after": [],
            "commands": [
                {
                    "command": "undo"
                }
            ]
        },
        {
            "before": [
                "U"
            ],
            "after": [],
            "commands": [
                {
                    "command": "redo"
                }
            ]
        },
        {
            "before": [
                "<Esc>"
            ],
            "after": [
                "<Esc>"
            ],
            "commands": [
                ":nohl"
            ]
        }
    ],
    "vim.visualstar": true,
    "vim.sneak": true,
    "vim.replaceWithRegister": true,
    "vim.sneakReplacesF": true,
    "vim.handleKeys": {
        "<C-d>": true,
        "<C-k>": false,
        "<C-t>": false,
        "<C-l>": false,
        "<C-h>": false,
        "<C-n>": false
    },
    "vim.smartRelativeLine": true,
    "vim.sneakUseIgnorecaseAndSmartcase": true,
    "vim.startofline": false,
    // TERMINAL
    "terminal.external.windowsExec": "C:\\Program Files\\Git\\bin\\bash.exe",
    "terminal.integrated.profiles.windows": {
        "Git Bash": {
            "source": "Git Bash"
        },
        "PowerShell": null,
        "Command Prompt": null
    },
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    // THEMING
    "editor.semanticHighlighting.enabled": true,
    "workbench.preferredDarkColorTheme": "SynthWave '84",
    "workbench.preferredLightColorTheme": "Noctis Lux",
    "window.autoDetectColorScheme": true,
    "workbench.colorCustomizations": {
        "terminal.ansiBrightRed": "#4f0909",
        "terminal.ansiBrightGreen": "#0a520a",
        "terminal.ansiBrightYellow": "#423110",
        "terminal.ansiBrightBlue": "#161a50",
        "terminal.ansiBrightMagenta": "#391141",
        "terminal.ansiBrightCyan": "#044a44",
        "[SynthWave '84]": {
            // Base16:
            // base00 - Default Background
            // base01 - Lighter Background (Used for status bars, line number and folding marks)
            // base02 - Selection Background
            // base03 - Comments, Invisibles, Line Highlighting
            // base04 - Dark Foreground (Used for status bars)
            // base05 - Default Foreground, Caret, Delimiters, Operators
            // base06 - Light Foreground (Not often used)
            // base07 - Light Background (Not often used)
            // base08 - Variables, XML Tags, Markup Link Text, Markup Lists, Diff Deleted
            // base09 - Integers, Boolean, Constants, XML Attributes, Markup Link Url
            // base0A - Classes, Markup Bold, Search Text Background
            // base0B - Strings, Inherited Class, Markup Code, Diff Inserted
            // base0C - Support, Regular Expressions, Escape Characters, Markup Quotes
            // base0D - Functions, Methods, Attribute IDs, Headings
            // base0E - Keywords, Storage, Selector, Markup Italic, Diff Changed
            // base0F - Deprecated, Opening/Closing Embedded Language Tags, e.g.
            // bat base16:
            // 0
            // 1 tags, illegal background
            // 2 strings
            // 3 classes
            // 4 functions
            // 5 keywords
            // 6 support
            // 7 text
            // 8 comment, unimplemented background
            // 9 ints
            // a
            // b separator background
            // c
            // d
            // e labels, Deprecated background
            // f classes, illegal
            // "terminal.background": "#000",
            // "terminal.border": "#000",
            // "terminal.foreground": "#fff",
            // "terminal.selectionBackground": "#aaa",
            // "terminalCursor.background": "#ffffff",
            // "terminalCursor.foreground": "#03edf9",
            // "terminal.ansiBlack": "#000",
            // "terminal.ansiRed": "#a11",
            // "terminal.ansiGreen": "#2a2",
            // "terminal.ansiYellow": "#aa3",
            // "terminal.ansiBlue": "#44f",
            // "terminal.ansiMagenta": "#2aa",
            // "terminal.ansiCyan": "#a6a",
            // "terminal.ansiWhite": "#aaa",
            // "terminal.ansiBrightBlack": "#555",
            // "terminal.ansiBrightRed": "#f11",
            // "terminal.ansiBrightGreen": "#2f2",
            // "terminal.ansiBrightYellow": "#ff3",
            // "terminal.ansiBrightBlue": "#44f",
            // "terminal.ansiBrightMagenta": "#2ff",
            // "terminal.ansiBrightCyan": "#f6f",
            // "terminal.ansiBrightWhite": "#fff",
        }
    },
    // GENERAL
    "editor.fontFamily": "Cascadia Code",
    "editor.fontLigatures": true,
    "editor.codeLensFontFamily": "Cascadia Code",
    "editor.renderWhitespace": "boundary",
    "editor.renderControlCharacters": true,
    "editor.cursorSurroundingLines": 10,
    "editor.wordWrap": "on",
    "editor.wrappingIndent": "indent",
    "workbench.iconTheme": "material-icon-theme",
    "debug.onTaskErrors": "showErrors",
    // TABS
    "[songtxt]": {
        "editor.fontFamily": "Cascadia Tablature"
    },
    // DSV
    "rainbow_csv.enable_auto_csv_lint": false,
    "rainbow_csv.autodetect_separators": [
        "|",
        ",",
        ";"
    ],
    // C#
    "csharp.referencesCodeLens.enabled": false,
    // PYTHON
    "python.showStartPage": false,
    "python.linting.pylintEnabled": true,
    "python.linting.enabled": true,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "files.associations": {
        ".gitconfig*": "gitconfig"
    },
    "tabnine.experimentalAutoImports": true,
    "color-highlight.markerType": "outline",
    "editor.cursorStyle": "line",
    "editor.insertSpaces": false,
    "editor.lineNumbers": "on",
    "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
    "window.zoomLevel": -1,
    "editor.minimap.enabled": false,
    "editor.formatOnType": true,
    "workbench.sideBar.location": "right",
    "formate.alignColon": false,
    "formate.verticalAlignProperties": false,
    "color-highlight.markRuler": false,
    "asciidoc.use_kroki": true,
    "asciidoc.preview.scrollEditorWithPreview": false,
    // "asciidoc.preview.useEditorStyle": false,
    // "asciidoc.preview.style": "./res/asciidoc.css",
    "asciidoc.preview.attributes": {
        // "linkcss": true,
        // "source-highlighter": "highlight.js",
        // "stylesheet": "../res/asciidoc.css",
        // "kroki-default-options": "inline",
        // "allow-uri-read": true
    },
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "explorer.confirmDragAndDrop": false,
    "html.format.wrapLineLength": 0,
    "vim.textwidth": 100,
    "editor.wordWrapColumn": 200,
    "editor.bracketPairColorization.enabled": true,

    // PURESCRIPT
    "purescript.addSpagoSources": true,
    "purescript.addNpmPath": true,
    "purescript.buildCommand": "spago build --purs-args --json-errors"
}