{
    // VIM
    "vim.hlsearch": true,
    "vim.gdefault": true,
    "editor.renderIndentGuides": false,
    "vim.normalModeKeyBindings": [
        {
            "before": [
                "Y"
            ],
            "after": [
                "y",
                "$"
            ]
        }
    ],
    // https://github.com/VSCodeVim/Vim/issues/2007
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "u"
            ],
            "after": [],
            "commands": [
                {
                    "command": "undo"
                }
            ]
        },
        {
            "before": [
                "U"
            ],
            "after": [],
            "commands": [
                {
                    "command": "redo"
                }
            ]
        },
        {
            "before": [
                "<Esc>"
            ],
            "after": [
                "<Esc>"
            ],
            "commands": [
                ":nohl"
            ]
        }
    ],
    "vim.visualstar": true,
    "vim.sneak": true,
    "vim.replaceWithRegister": true,
    "vim.sneakReplacesF": true,
    "vim.handleKeys": {
        "<C-d>": true,
        "<C-k>": false,
        "<C-t>": false,
        "<C-l>": false,
        "<C-h>": false,
        "<C-n>": false
    },
    "vim.smartRelativeLine": true,
    "vim.sneakUseIgnorecaseAndSmartcase": true,
    "vim.startofline": false,
    // TERMINAL
    "terminal.external.windowsExec": "C:\\Program Files\\Git\\bin\\bash.exe",
    "terminal.integrated.profiles.windows": {
        "Git Bash": {
            "source": "Git Bash"
        },
        "PowerShell": null,
        "Command Prompt": null
    },
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    // THEMING
    "editor.semanticHighlighting.enabled": true,
    "workbench.preferredDarkColorTheme": "SynthWave '84",
    "workbench.preferredLightColorTheme": "Noctis Lux",
    "window.autoDetectColorScheme": true,
    "workbench.colorCustomizations": {
        "[Noctis Lux]": {
        },
        "[SynthWave '84]": {
        },
    },
    // GENERAL
    "editor.fontFamily": "Cascadia Code",
    "editor.fontLigatures": true,
    "editor.codeLensFontFamily": "Cascadia Code",
    "editor.renderWhitespace": "boundary",
    "editor.renderControlCharacters": true,
    "editor.cursorSurroundingLines": 10,
    "editor.wordWrap": "on",
    "editor.wrappingIndent": "indent",
    "workbench.iconTheme": "material-icon-theme",
    "debug.onTaskErrors": "showErrors",
    // TABS
    "[songtxt]": {
        "editor.fontFamily": "Cascadia Tablature"
    },
    // DSV
    "rainbow_csv.enable_auto_csv_lint": false,
    "rainbow_csv.autodetect_separators": [
        "|",
        ",",
        ";"
    ],
    // C#
    "csharp.referencesCodeLens.enabled": false,
    // PYTHON
    "python.showStartPage": false,
    "python.linting.pylintEnabled": true,
    "python.linting.enabled": true,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "files.associations": {
        ".gitconfig*": "gitconfig"
    },
    "tabnine.experimentalAutoImports": true,
    "color-highlight.markerType": "outline",
    "editor.cursorStyle": "line",
    "editor.insertSpaces": false,
    "editor.lineNumbers": "on",
    "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
    "window.zoomLevel": -1,
    "editor.minimap.enabled": false,
    "editor.formatOnType": true,
    "workbench.sideBar.location": "right",
    "formate.alignColon": false,
    "formate.verticalAlignProperties": false,
    "color-highlight.markRuler": false,
    "asciidoc.use_kroki": true,
    "asciidoc.preview.scrollEditorWithPreview": false,
    // "asciidoc.preview.useEditorStyle": false,
    // "asciidoc.preview.style": "./res/asciidoc.css",
    "asciidoc.preview.attributes": {
        // "linkcss": true,
        // "source-highlighter": "highlight.js",
        // "stylesheet": "../res/asciidoc.css",
        // "kroki-default-options": "inline",
        // "allow-uri-read": true
    },
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "explorer.confirmDragAndDrop": false,
    "html.format.wrapLineLength": 0,
    "vim.textwidth": 100,
    "editor.wordWrapColumn": 200,
    "editor.bracketPairColorization.enabled": true,

    // PURESCRIPT
    "purescript.addSpagoSources": true,
    "purescript.addNpmPath": true,
    "purescript.buildCommand": "spago build --purs-args --json-errors",
    "workbench.colorTheme": "Noctis Lux",
    "editor.codeLens": false
}