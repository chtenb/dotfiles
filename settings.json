{
    // VIM
    "vim.hlsearch": true,
    "vim.gdefault": true,
    "vim.normalModeKeyBindings": [
        {
            "before": [
                "Y"
            ],
            "after": [
                "y",
                "$"
            ]
        }
    ],
    // https://github.com/VSCodeVim/Vim/issues/2007
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [ "u" ],
            "after": [],
            "commands": [ { "command": "undo" } ]
        },
        {
            "before": [ "U" ],
            "after": [],
            "commands": [ { "command": "redo" } ]
        },
        {
            "before": [ "<Esc>" ],
            "after": [ "<Esc>" ],
            "commands": [ ":nohl", "closeFindWidget" ]
        },
        {
            "before": [ "*" ],
            "after": [],
            "commands": [ { "command": "editor.action.nextSelectionMatchFindAction" } ]
        },
        {
            "before": [ "n" ],
            "after": [],
            "commands": [ { "command": "editor.action.nextMatchFindAction" } ]
        },
        {
            "before": [ "N" ], "after": [],
            "commands": [ { "command": "editor.action.previousMatchFindAction" } ]
        },
        {
            "before": [ "/" ], "after": [],
            "commands": [ { "command": "actions.find" } ]
        },
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": [ "*" ],
            "after": [],
            "commands": [ { "command": "editor.action.nextSelectionMatchFindAction" } ]
        },
        {
            "before": [ "n" ],
            "after": [],
            "commands": [ { "command": "editor.action.nextMatchFindAction" } ]
        },
        {
            "before": [ "N" ], "after": [],
            "commands": [ { "command": "editor.action.previousMatchFindAction" } ]
        },
        {
            "before": [ "/" ], "after": [],
            "commands": [ { "command": "actions.find" } ]
        },
    ],
    "macros": {
        "acceptFindInput": [
            "editor.action.nextMatchFindAction",
            "workbench.action.focusActiveEditorGroup"
        ]
    },
    "vim.visualstar": true,
    "vim.sneak": true,
    "vim.replaceWithRegister": true,
    "vim.sneakReplacesF": true,
    "vim.handleKeys": {
        "<C-d>": true,
        "<C-k>": false,
        "<C-t>": false,
        "<C-l>": false,
        "<C-h>": false,
        "<C-n>": false
    },
    "vim.smartRelativeLine": true,
    "vim.sneakUseIgnorecaseAndSmartcase": true,
    "vim.startofline": false,
    // TERMINAL
    // "terminal.external.windowsExec": "C:\\Program Files\\Git\\bin\\bash.exe",
    "terminal.external.windowsExec": "C:\\Program Files\\wezterm\\wezterm-gui.exe",
    "terminal.integrated.profiles.windows": {
        // "Nushell": {
        //     "path": "nu"
        // },
        "Git Bash": {
            "source": "Git Bash"
        },
        "PowerShell": null,
        "Command Prompt": null
    },
    "terminal.integrated.profiles.linux": {
        "Nushell": {
            "path": "nu"
        }
    },
    "terminal.integrated.defaultProfile.windows": "Nushell",
    "terminal.integrated.defaultProfile.linux": "Nushell",
    "terminal.integrated.commandsToSkipShell": [
        "-workbench.action.quickOpen",
        "-workbench.action.quickOpenView"
    ],
    // THEMING
    // "editor.semanticHighlighting.enabled": false,
    "workbench.preferredDarkColorTheme": "Synthwave Material Ansi16",
    "workbench.preferredLightColorTheme": "Noctis Lux Ansi16",
    "window.autoDetectColorScheme": true,
    "workbench.colorCustomizations": {
        // "editor.lineHighlightBackground": "#00000000",
        "[Noctis Lux]": {},
        "[SynthWave '84]": {},
    },
    // GENERAL
    "editor.fontFamily": "Cascadia Code,FiraCode Nerd Font",
    "editor.fontLigatures": true,
    "editor.codeLensFontFamily": "Cascadia Code",
    // "editor.renderWhitespace": "boundary",
    "editor.renderControlCharacters": true,
    "editor.cursorSurroundingLines": 10,
    "editor.wordWrap": "on",
    "editor.wrappingIndent": "indent",
    "workbench.iconTheme": "material-icon-theme",
    "debug.onTaskErrors": "showErrors",
    // TABS
    "[songtxt]": {
        "editor.fontFamily": "Cascadia Tablature"
    },
    // DSV
    "rainbow_csv.enable_auto_csv_lint": false,
    "rainbow_csv.autodetect_separators": [
        "|",
        ",",
        ";"
    ],
    // C#
    "csharp.referencesCodeLens.enabled": false,
    // PYTHON
    "python.showStartPage": false,
    "python.linting.pylintEnabled": true,
    "python.linting.enabled": true,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "files.associations": {
        ".gitconfig*": "gitconfig"
    },
    "files.insertFinalNewline": true,
    "editor.renderLineHighlight": "line",
    "workbench.startupEditor": "none",
    "color-highlight.markerType": "outline",
    "editor.lineNumbers": "on",
    "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
    "editor.minimap.enabled": false,
    "workbench.sideBar.location": "right",
    "formate.alignColon": false,
    "formate.verticalAlignProperties": false,
    "color-highlight.markRuler": false,
    "asciidoc.use_kroki": true,
    "asciidoc.preview.scrollEditorWithPreview": false,
    // "asciidoc.preview.useEditorStyle": false,
    // "asciidoc.preview.style": "./res/asciidoc.css",
    "asciidoc.preview.attributes": {
        // "linkcss": true,
        // "source-highlighter": "highlight.js",
        // "stylesheet": "../res/asciidoc.css",
        // "kroki-default-options": "inline",
        // "allow-uri-read": true
    },
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "explorer.confirmDragAndDrop": false,
    "html.format.wrapLineLength": 0,
    "vim.textwidth": 100,
    "editor.wordWrapColumn": 200,
    // PURESCRIPT
    "purescript.addSpagoSources": true,
    "purescript.addNpmPath": true,
    "purescript.formatter": "purs-tidy",
    "editor.semanticHighlighting.enabled": "configuredByTheme",
    "[purescript]": {
        "editor.formatOnSave": true,
    },
    "[haskell]": {
        "editor.formatOnSave": true,
    },
    "[rust]": {
        "editor.formatOnSave": true,
        "editor.semanticHighlighting.enabled": false,
    },
    "editor.tabSize": 2,
    "customizeUI.font.monospace": "CozetteVector",
    "customizeUI.font.regular": "CozetteVector",
    "editor.codeLens": true,
    "diffEditor.codeLens": true,
    "gitblame.ignoreWhitespace": true,
    "gitlens.codeLens.enabled": false,
    "gitlens.mode.active": "zen",
    "workbench.activityBar.visible": false,
    "purescript.exportsCodeLens": false,
    "tabnine.experimentalAutoImports": true,
    "workbench.colorTheme": "Noctis Lux Ansi 16",
    "editor.fontSize": 12,
    "terminal.integrated.fontSize": 12,
    // "window.zoomLevel": -1,
    // "terminal.integrated.gpuAcceleration": "off",
    "terminal.integrated.minimumContrastRatio": 1,
    "workbench.panel.opensMaximized": "always",
    "Lua.telemetry.enable": false,
    "rust-analyzer.lens.implementations": false,
    "security.workspace.trust.untrustedFiles": "open",
    "security.workspace.trust.enabled": false,
    "haskell.manageHLS": "GHCup",
    "haskell.ghcupExecutablePath": "/home/chiel/.ghcup/bin/ghcup",
    "files.exclude": {
        "**/.git": false
},
"explorer.excludeGitIgnore": true
}
